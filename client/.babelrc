{
  "plugins": [
    "transform-decorators",
    "transform-object-rest-spread"
  ],
  "env": {
    "development": {
      "presets": [
        "flow",
        "react",
        "es2015",
        ["env", {
          "targets": { "browsers": ["last 2 versions", "safari >= 10"] }
        }]
      ],
      "plugins": ["react-hot-loader/babel"]
    },
    "test": {
      "presets": [
        "flow",
        "react",
        "es2015",
        ["env", {
          "targets": { "node": "8.5" }
        }]
      ]
    },
    "production": {
      "presets": [
        "flow",
        "react",
        "es2015",
        ["env", {
          "targets": { "browsers": ["last 2 versions", "safari >= 10"] }
        }]
      ]
    }
  }
}
